<script type="text/javascript">
	function updateInfo(color) {
		document.getElementById('info-r').value = color.rgb[0];
		document.getElementById('info-g').value = color.rgb[1];
		document.getElementById('info-b').value = color.rgb[2];
	}
</script>

<h1>Generador de archivos</h1>

<%= form_for :archivo, remote: true, url: archivos_path ,html: {class: "form-horizontal", role: "form"} do |f| %>
<div class="form-group">
	<%= f.label :nombre, class: "col-sm-2 control-label" %>
	<div class="col-sm-8">
		<%= f.text_field  :nombre , class: "form-control"%>
	</div>
</div>

<div class="form-group">
	<%= f.label "Numero de lados", class: "col-sm-2 control-label" %>
	<div class="col-sm-8">
		<%= f.text_field  :num_lados , class: "form-control"%>
	</div>
</div>

<div class="form-group">
	<%= f.label "Longitud del lado", class: "col-sm-2 control-label" %>
	<div class="col-sm-8">
		<%= f.text_field  :size_lados , class: "form-control"%>
	</div>
</div>

<hr/>
	<div class="form-group">
		<label for="selector" class="col-sm-2 control-label">Color</label>
		<div class="col-sm-8">
			<input class="color {onImmediateChange:'updateInfo(this);'} form-control" value="66ff00"  class="form-control" id="selector">
		</div>
	</div>
<div class="form-inline" role="form">
	<div class="row">
		<div class="col-md-2 col-md-offset-2">
			<div class="form-group">
			<%= f.label "R", class: "col-xs-2" %></br>
			<%= f.text_field  :color_r, id: "info-r", class: "form-control" %>
			</div>
		</div>
		<div class="col-md-2 col-md-offset-1">
			<div class="form-group">
			<%= f.label "G", class: "col-xs-2" %></br>
			<%= f.text_field  :color_g, id: "info-g", class: "form-control" %>
			</div>
		</div>
		<div class="col-md-2 col-md-offset-1">
			<div class="form-group">
			<%= f.label "B", class: "col-xs-2" %></br>
			<%= f.text_field  :color_b, id: "info-b", class: "form-control" %>
			</div>
		</div>
	</div>
<hr/>

	<!-- Teclas de translacion -->
	<div class="row">
		<div class="col-md-offset-1">
			<h4>Teclas control de Traslación</h4>
		</div>
	</div>

	<div class="row">
		<div class="col-md-2 col-md-offset-2">
			<div class="form-group">
			<%= f.label "X", class: "col-xs-2" %>
			<%= f.text_field  :tecla_tx, id: "info-r", class: "form-control" %>
			</div>
		</div>
		<div class="col-md-2 col-md-offset-1">
			<div class="form-group">
			<%= f.label "Y", class: "col-xs-2" %></br>
			<%= f.text_field  :tecla_ty, id: "info-g", class: "form-control" %>
			</div>
		</div>
		<div class="col-md-2 col-md-offset-1">
			<div class="form-group">
			<%= f.label "Z", class: "col-xs-2" %></br>
			<%= f.text_field  :tecla_tz, id: "info-b", class: "form-control" %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-offset-1">
			<h4>Teclas de control de Escalado</h4>
		</div>
	</div>

	<div class="row">
		<div class="col-md-2 col-md-offset-2">
			<div class="form-group">
			<%= f.label "X", class: "col-xs-2" %>
			<%= f.text_field  :tecla_sx, id: "info-r", class: "form-control" %>
			</div>
		</div>
		<div class="col-md-2 col-md-offset-1">
			<div class="form-group">
			<%= f.label "Y", class: "col-xs-2" %></br>
			<%= f.text_field  :tecla_sy, id: "info-g", class: "form-control" %>
			</div>
		</div>
		<div class="col-md-2 col-md-offset-1">
			<div class="form-group">
			<%= f.label "Z", class: "col-xs-2" %></br>
			<%= f.text_field  :tecla_sz, id: "info-b", class: "form-control" %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-offset-1">
			<h4>Teclas de control de Rotación</h4>
		</div>
	</div>

	<div class="row">
		<div class="col-md-2 col-md-offset-2">
			<div class="form-group">
			<%= f.label "X", class: "col-xs-2" %>
			<%= f.text_field  :tecla_rx, id: "info-r", class: "form-control" %>
			</div>
		</div>
		<div class="col-md-2 col-md-offset-1">
			<div class="form-group">
			<%= f.label "Y", class: "col-xs-2" %></br>
			<%= f.text_field  :tecla_ry, id: "info-g", class: "form-control" %>
			</div>
		</div>
		<div class="col-md-2 col-md-offset-1">
			<div class="form-group">
			<%= f.label "Z", class: "col-xs-2" %></br>
			<%= f.text_field  :tecla_rz, id: "info-b", class: "form-control" %>
			</div>
		</div>
	</div>
</div>
<hr/>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      	<%= f.submit '>>> Generar Archivo de OpenGL <<< XD', class: "btn btn-primary btn-lg"%>
    </div>
</div>

<% end %>

<script type="text/javascript">
	function updateInfo(color) {
		document.getElementById('info-r').value = color.rgb[0];
		document.getElementById('info-g').value = color.rgb[1];
		document.getElementById('info-b').value = color.rgb[2];
	}
</script>